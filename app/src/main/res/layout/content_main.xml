<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.saphonoff.mycalc004.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@color/smoothBlack"
    android:padding="0dp">

    <Button
        android:text="."
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btnDot"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btn0"
        android:layout_toEndOf="@+id/btn0"
        android:background="@color/smoothGrey"
        android:textSize="40sp"
        android:textColor="@color/smoothBlack" />

    <Button
        android:text="="
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btnEquals"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnDot"
        android:layout_toEndOf="@+id/btnDot"
        android:background="@color/darkerGrey"
        android:textSize="60sp"
        android:textColor="@color/smoothBlack" />

    <Button
        android:text="+"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btnPlus"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnEquals"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/orange"
        android:textColor="@color/smoothBlack"
        android:textSize="60sp" />

    <Button
        android:text="1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn1"
        android:layout_above="@+id/btn0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/smoothGrey"
        android:textSize="40sp"
        android:textColor="@color/smoothBlack" />

    <Button
        android:text="2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn2"
        android:layout_above="@+id/btnDot"
        android:layout_toRightOf="@+id/btn0"
        android:layout_toEndOf="@+id/btn0"
        android:background="@color/smoothGrey"
        android:textSize="40sp"
        android:textColor="@color/smoothBlack" />

    <Button
        android:text="3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn3"
        android:layout_above="@+id/btnEquals"
        android:layout_toRightOf="@+id/btn2"
        android:layout_toEndOf="@+id/btn2"
        android:background="@color/smoothGrey"
        android:textSize="40sp"
        android:textColor="@color/smoothBlack" />

    <Button
        android:text="-"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btnMinus"
        android:layout_above="@+id/btnPlus"
        android:layout_toRightOf="@+id/btnEquals"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/orange"
        android:textColor="@color/smoothBlack"
        android:textSize="60sp" />

    <Button
        android:text="4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn4"
        android:layout_above="@+id/btn1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/smoothGrey"
        android:textSize="40sp"
        android:textColor="@color/smoothBlack" />

    <Button
        android:text="5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn5"
        android:layout_above="@+id/btn2"
        android:layout_toRightOf="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:background="@color/smoothGrey"
        android:textSize="40sp"
        android:textColor="@color/smoothBlack" />

    <Button
        android:text="6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn6"
        android:layout_above="@+id/btn3"
        android:layout_toRightOf="@+id/btn5"
        android:layout_toEndOf="@+id/btn5"
        android:background="@color/smoothGrey"
        android:textSize="40sp"
        android:textColor="@color/smoothBlack" />

    <Button
        android:text="ร"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btnMultiply"
        android:layout_above="@+id/btnMinus"
        android:layout_toRightOf="@+id/btn3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/orange"
        android:textColor="@color/smoothBlack"
        android:textSize="60sp" />

    <Button
        android:text="7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn7"
        android:layout_above="@+id/btn4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/smoothGrey"
        android:textSize="40sp"
        android:textColor="@color/smoothBlack" />

    <Button
        android:text="8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn8"
        android:layout_above="@+id/btn5"
        android:layout_toRightOf="@+id/btn4"
        android:layout_toEndOf="@+id/btn4"
        android:background="@color/smoothGrey"
        android:textSize="40sp"
        android:textColor="@color/smoothBlack" />

    <Button
        android:text="9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn9"
        android:layout_above="@+id/btn6"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:background="@color/smoothGrey"
        android:textSize="40sp"
        android:textColor="@color/smoothBlack" />

    <Button
        android:text="รท"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btnDivide"
        android:layout_above="@+id/btnMultiply"
        android:layout_toRightOf="@+id/btn9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/orange"
        android:textColor="@color/smoothBlack"
        android:textSize="60sp" />

    <Button
        android:text="Clear"
        android:layout_width="90dp"
        android:id="@+id/btnClearAll"
        android:layout_above="@+id/btn7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btnDivide"
        android:layout_toStartOf="@+id/btnDivide"
        android:layout_height="60dp"
        android:background="@color/darkerGrey"
        android:textColor="@color/smoothBlack"
        android:textSize="25sp"
        android:paddingLeft="20dp"
        android:gravity="left|center_vertical" />

    <Button
        android:text="C"
        android:layout_width="90dp"
        android:id="@+id/btnC"
        android:layout_above="@+id/btnDivide"
        android:layout_toRightOf="@+id/btn9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="60dp"
        android:background="@color/darkerGrey"
        android:textColor="@color/smoothBlack"
        android:textSize="40sp" />

    <TextView
        android:text="0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnC"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/screen"
        android:textColor="@color/smoothGrey"
        android:textSize="40sp"
        android:gravity="bottom|right"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:maxLines = "500"
        android:scrollbars = "vertical"/>

    <Button
        android:text="0"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn0"
        android:background="@color/smoothGrey"
        android:textSize="40sp"
        android:textColor="@color/smoothBlack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
